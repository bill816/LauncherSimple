<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!--
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
    </style>
    -->

    <!-- Application theme. -->
        
    <style name="NoTitle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="NoTitleFullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyDialogStyle">  
        <item name="android:windowBackground">@android:color/transparent</item> 
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowNoTitle">true</item>  
        <item name="android:windowIsTranslucent">true</item>  
        <item name="android:windowContentOverlay">@null</item>  
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>  
        <item name="android:windowFullscreen">true</item>
</style>  

    
 <!-- 顶部状态中的字体 -->
    <style name="top_text_style">
        <item name="android:textSize">35sp</item>
        <!-- <item name="android:textStyle">bold</item> -->
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- 主页页面标签字体  -->
    <style name="table_page_title">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:gravity">center|top</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#666666</item>
        <!--<item name="android:background">@drawable/top_title_selected</item>-->
         <item name="android:background">@drawable/table_title_selected</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="city_dialog" parent="@android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    
     <!-- 图标中的字体 -->
    <style name="image_text_style">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 小进度条样式
    <style name="load_ctiy_progess" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">800dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:indeterminateDrawable">@anim/search_anim</item>
    </style> -->

</resources>
