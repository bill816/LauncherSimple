<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <Button
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dip"
        android:layout_marginRight="45dip"
        android:id="@+id/btn_cancell"
        android:layout_width="170dip"
        android:layout_height="58dip"
        android:background="@drawable/mem_release_button"
        android:gravity="center"
        android:textColor="#FFFF"
        android:textSize="24sp"
        android:text="@string/cancel"
        />
    <Button
        android:layout_toLeftOf="@+id/btn_cancell"
        android:layout_alignTop="@+id/btn_cancell"
        android:layout_marginRight="20dip"
        android:id="@+id/btn_clean"
        android:layout_width="170dip"
        android:layout_height="58dip"
        android:background="@drawable/mem_release_button"
        android:textSize="24sp"
        android:textColor="#FFFF"
        android:gravity="center"
        android:text="@string/app_clean"
        />
        <LinearLayout
        android:layout_below="@+id/btn_cancell"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dip"
        android:layout_width="1190dip"
        android:layout_height="116dip"
        android:orientation="vertical"
        android:id="@+id/grid_layout"
        />
</RelativeLayout>
