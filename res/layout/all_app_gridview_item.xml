<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/all_app_grid_item_bg"
        android:layout_width="@dimen/app_item_width"
        android:layout_height="@dimen/app_item_height"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/all_app_grid_item_icon"
            android:layout_width="@dimen/app_icon_size"
            android:layout_height="@dimen/app_icon_size" />

        <TextView
            android:id="@+id/all_app_grid_item_name"
            android:layout_width="@dimen/app_text_size"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/app_font_size" />
    </LinearLayout>

</RelativeLayout>